<div id="main" class="container">
  <h2> Your Tasks for Today:</h2>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.title, task %> <%= link_to edit_path(task) do %>
         <i class="far fa-edit"></i>
        <% end %>
        <%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure you would like to delete?" } do %>
         <i class="far fa-trash-alt"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
  <p><%= link_to 'Make new Task', tasks_new_path %></p>
</div>
